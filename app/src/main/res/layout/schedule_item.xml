<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/lessonNameTextView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spartanmb_extrabold"
        android:text="1. Разработка и анализ требований к программному обеспечению"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lessonNameTextView"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/spartanmb_extrabold"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cabinetTextView"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/lessonNameTextView"
            android:text="Лб.(Корпус №1, ауд.319)"
            android:fontFamily="@font/spartanmb_extrabold"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="12sp" />

    <TextView
        android:id="@+id/groupTextView"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayTextView"
        android:fontFamily="@font/spartanmb_extrabold"
        android:text="ПИн-19-20"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/teacherTextView"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cabinetTextView"
        android:layout_alignStart="@+id/cabinetTextView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/lessonNameTextView"
        android:fontFamily="@font/spartanmb_extrabold"
        android:gravity="end"
        android:text="Хайткулов Д.Я"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeTextView"
        android:text="Среда"
        android:textColor="@color/white"
        android:textSize="14sp" />

    </RelativeLayout>