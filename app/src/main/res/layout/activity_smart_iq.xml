<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#030840">

    <TextView
        android:id="@+id/tv_smart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SmartIQ"
        android:textColor="@color/white"
        android:fontFamily="@font/leaguespartanbold_eng"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/bt_new"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/leaguespartanbold_ru"
        android:background="@drawable/button_style"
        android:foreground="@drawable/animated_button"
        android:text="@string/New_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_smart" />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/bt_tb"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/leaguespartanbold_ru"
        android:background="@drawable/button_style"
        android:foreground="@drawable/animated_button"
        android:text="@string/Leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_new"  />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/bt_st"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/leaguespartanbold_ru"
        android:background="@drawable/button_style"
        android:foreground="@drawable/animated_button"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_tb"  />

    <Button
        style="@style/ButtonStyle"
        android:id="@+id/bt_main"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/leaguespartanbold_ru"
        android:background="@drawable/button_style"
        android:foreground="@drawable/animated_button"
        android:text="@string/Main_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_st"  />
</androidx.constraintlayout.widget.ConstraintLayout>